<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout.OutlinedBox.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconTint">@color/textTertiary</item>
        <item name="helperTextTextColor">@color/textTertiary</item>
        <item name="errorTextColor">@color/alertRed</item>
        <item name="errorIconTint">@color/alertRed</item>
        <item name="android:textColorHint">@color/textTertiary</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.0094</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ColorSelectorAutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.0094</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DetailsDividerTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:letterSpacing">0.0094</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DetailsDivider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:alpha">0.4</item>
        <item name="android:background">@color/textTertiary</item>
    </style>
</resources>